{
  "swagger": "2.0",
  "info": {
    "description": "A simple task list app",
    "version": "1.0.0",
    "title": "Task App",
    "contact": {
      "email": "peter.b.boyer@gmail.com"
    }
  },
  "basePath": "/v1",
  "schemes": ["http"],
  "paths": {
    "/task": {
      "post": {
        "summary": "Add a task",
        "description": "",
        "operationId": "task_add",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Task object to add",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Task"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "summary": "Update a task",
        "description": "",
        "operationId": "task_update",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Task object to update",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Task"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/task/{taskId}": {
      "delete": {
        "summary": "Delete a task",
        "description": "",
        "operationId": "task_delete",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "ID of task to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/task/list": {
      "get": {
        "summary": "List available tasks",
        "description": "These are returned in sorted order. The incomplete tasks come first and then are sorted by priority. Then from latest to oldest with ties broken by descending priority (0 is highest).",
        "operationId": "task_list",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "user",
            "in": "query",
            "description": "User to filter by",
            "required": false,
            "type": "string"
          },
          {
            "name": "priority",
            "in": "query",
            "description": "Priority to filter by",
            "required": false,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "description",
            "in": "query",
            "description": "Description to filter by",
            "required": false,
            "type": "string"
          },
          {
            "name": "completed",
            "in": "query",
            "description": "Completed datetime string to filter by",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Task"
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/note": {
      "post": {
        "summary": "Add a note",
        "description": "",
        "operationId": "note_add",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Note object to add",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Note"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Note"
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/note/{noteId}": {
      "get": {
        "summary": "Get a note.",
        "description": "",
        "operationId": "note_get",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Note"
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "summary": "Update a note with new text.",
        "description": "The originating user must be the creator of the note or a collaborator.",
        "operationId": "note_update",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Note object to update",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UpdateNoteRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Note"
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "/note/share/{noteId}": {
        "put": {
          "summary": "Share a note.",
          "description": "The originating user must be the creator of the note.",
          "operationId": "note_share",
          "consumes": ["application/json"],
          "produces": ["application/json"],
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Note object to update",
              "required": true,
              "schema": {
                "$ref": "#/definitions/ShareNoteRequest"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful operation",
              "schema": {
                "$ref": "#/definitions/Note"
              }
            },
            "400": {
              "description": "Bad request"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/note/unshare/{noteId}": {
        "put": {
          "summary": "Unshare a note. The originating user must be the creator of the note.",
          "description": "",
          "operationId": "note_unshare",
          "consumes": ["application/json"],
          "produces": ["application/json"],
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Note object to update",
              "required": true,
              "schema": {
                "$ref": "#/definitions/UnshareNoteRequest"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful operation",
              "schema": {
                "$ref": "#/definitions/Note"
              }
            },
            "400": {
              "description": "Bad request"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Task": {
      "type": "object",
      "title": "A task",
      "properties": {
        "id": {
          "type": "string",
          "title": "Id",
          "description": "RFC4122 UUID for the task"
        },
        "user": {
          "type": "string",
          "minLength": 5,
          "maxLength": 254,
          "title": "User",
          "description": "User's email address"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "title": "Description of the task"
        },
        "priority": {
          "type": "integer",
          "multipleOf": 1,
          "maximum": 9,
          "minimum": 0,
          "title": "Priority",
          "description": "Task priority, as a single-digit integer. 0 is highest priority"
        },
        "completed": {
          "type": "string",
          "format": "date-time",
          "title": "Completed",
          "description": "Completed datetime, formatted as an ISO8601 string"
        }
      },
      "required": ["description", "priority"]
    },
    "Note": {
      "type": "object",
      "title": "A note to share with other users",
      "properties": {
        "id": {
          "type": "string",
          "title": "Id",
          "description": "RFC4122 UUID for the task"
        },
        "creator": {
          "type": "string",
          "minLength": 5,
          "maxLength": 254,
          "title": "Creator",
          "description": "Creator's email address"
        },
        "text": {
          "type": "string",
          "minLength": 1,
          "title": "Text of the note"
        },
        "collaborators": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 5,
            "maxLength": 254
          },
          "title": "Collaborators",
          "description": "A list of collaborators that can edit the text of the note"
        }
      },
      "required": ["creator", "text"]
    },
    "ShareNoteRequest": {
      "type": "object",
      "title": "A task",
      "properties": {
        "originating_user": {
          "type": "string",
          "minLength": 5,
          "maxLength": 254,
          "title": "Originating user",
          "description": "This is the email address of the user who sent the request. The user must be authorized for this operation"
        },
        "new_collaborator": {
          "type": "string",
          "minLength": 5,
          "maxLength": 254,
          "title": "New collaborator",
          "description": "The email address of the user to add as a collaborator"
        }
      },
      "required": ["originating_user", "new_collaborator"]
    },
    "UnshareNoteRequest": {
      "type": "object",
      "title": "A task",
      "properties": {
        "originating_user": {
          "type": "string",
          "minLength": 5,
          "maxLength": 254,
          "title": "Originating user",
          "description": "This is the email address of the user who sent the request. The user must be authorized for this operation"
        },
        "collaborator_to_remove": {
          "type": "string",
          "minLength": 5,
          "maxLength": 254,
          "title": "Collaborator to remove",
          "description": "The email address of the user to remove as a collaborator"
        }
      },
      "required": ["originating_user", "collaborator_to_remove"]
    },
    "UpdateNoteRequest": {
      "type": "object",
      "title": "A task",
      "properties": {
        "originating_user": {
          "type": "string",
          "minLength": 5,
          "maxLength": 254,
          "title": "Originating user",
          "description": "This is the email address of the user who sent the request. The user must be authorized for this operation"
        },
        "text": {
          "type": "string",
          "minLength": 1,
          "title": "Text",
          "description": "The new text for the note"
        }
      },
      "required": ["originating_user", "text"]
    }
  }
}
